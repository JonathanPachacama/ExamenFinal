<h2>Pizzas Seleccionada</h2>
<form action="/">
  <div class="form-group row">
    <label for="busqueda" class="col-4 col-form-label">
      Busque la pizzas que desea
    </label>
    <div class="col-4">
      <input class="form-control" type="text" placeholder="Buscar" id="busqueda"
             name="busqueda">

    </div>

  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <button class="btn btn-success btn-block">Buscar</button>
    </div>
    <div class="col-md-3"></div>
  </div>
</form>

<br>
<br>
<div id="contenedor" class="row">
  <% for(var i=0; i<pizzas.length; i++) {%>
  <div class="card" style="width: 20rem;">
    <div class="card-block">

      <h4 class="card-title"><%= pizzas[i].nombrePizza %> </h4>
      <p class="card-text">
        <%= pizzas[i].ingredientes %>
      </p>





    </div>
  </div>
  <% } %>
</div>
