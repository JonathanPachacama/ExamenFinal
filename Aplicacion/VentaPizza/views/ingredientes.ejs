<br>
<br>
<div id="contenedor" class="row">

  <% for(var i = 0; i < ingredientes.length; i++) { %>
  <div class="card" style="width: 20rem;">
    <div class="card-block">
      <h4 class="card-title"><%= ingredientes[i].nombreIngrediente %></h4>
    </div>
    <div class="card-block">
      <form action="/Ingredientes/anadirIngrediente" method="post">
        <input hidden
               type="text"
               name="id"
               value="<%= ingredientes[i].id %>">
        <button type="submit" class="btn btn-primary">AÃ±adir nuevo ingrediente</button>
      </form>
    </div>
  </div>

  <% } %>

</div>

