    <label for="busqueda" class="col-4 col-form-label">
      Busque los ingredientes que desee para acompa;ar a su pizza
    </label>
    <div class="col-4">
      <input class="form-control" type="text" placeholder="Buscar" id="busqueda" name="busqueda">
    </div>

  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <button class="btn btn-success btn-block">Buscar</button>
    </div>
    <div class="col-md-3"></div>
  </div>
